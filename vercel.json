{
  "buildCommand": "pnpm build",
  "outputDirectory": "dist",
  "installCommand": "pnpm install",
  "env": {
    "NODE_ENV": "production",
    "DATABASE_URL": "@database_url",
    "JWT_SECRET": "@jwt_secret",
    "VITE_APP_ID": "@vite_app_id",
    "OAUTH_SERVER_URL": "@oauth_server_url",
    "VITE_OAUTH_PORTAL_URL": "@vite_oauth_portal_url",
    "OWNER_OPEN_ID": "@owner_open_id",
    "OWNER_NAME": "@owner_name",
    "SILICONFLOW_API_ENDPOINT": "@siliconflow_api_endpoint",
    "SILICONFLOW_API_KEY_1": "@siliconflow_api_key_1",
    "SILICONFLOW_API_KEY_2": "@siliconflow_api_key_2",
    "SILICONFLOW_MODEL": "@siliconflow_model",
    "VITE_FRONTEND_FORGE_API_URL": "@vite_frontend_forge_api_url",
    "VITE_FRONTEND_FORGE_API_KEY": "@vite_frontend_forge_api_key",
    "BUILT_IN_FORGE_API_URL": "@built_in_forge_api_url",
    "BUILT_IN_FORGE_API_KEY": "@built_in_forge_api_key"
  },
  "functions": {
    "server/_core/index.ts": {
      "memory": 1024,
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/trpc/articles.refresh",
      "schedule": "0 2 * * *"
    }
  ]
}
